{
    "name": "@gomoku-monorepo/core-gomoku",
    "version": "1.0.0",
    "description": "Framework-agnostic Gomoku game core logic",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
    },
    "keywords": [
        "gomoku",
        "game-engine",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.3.5",
        "typescript": "^5.6.3"
    }
}